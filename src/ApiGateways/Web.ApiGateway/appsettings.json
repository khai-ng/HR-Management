{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "OpenApi": {
    "Endpoint": {
      "Name": "ApiGateway.API V1"
    },
    "Document": {
      "Description": "The ApiGateway Service HTTP API",
      "Title": "HRM - ApiGateway HTTP API",
      "Version": "v1"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "identity": {
        "ClusterId": "identity",
        "Match": {
          "Path": "identity/{**catch-all}"
        }
      },
      "employee": {
        "ClusterId": "employee",
        "Match": {
          "Path": "employee/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "identity": {
        "ClusterId": "identity",
        "Swagger": {
          "Endpoint": "/swagger/identity/v1/swagger.json",
          "Spec": "/swagger/v1/swagger.json",
          "OriginPath": "",
          "TargetPath": ""
        },
        "Destinations": {
          "default": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "employee": {
        "ClusterId": "employee",
        "Swagger": {
          "Endpoint": "/swagger/employee/v1/swagger.json",
          "Spec": "/swagger/v1/swagger.json",
          "OriginPath": "",
          "TargetPath": ""
        },
        "Destinations": {
          "default": {
            "Address": "http://localhost:5002"
          }
        }
      }
    }
  },

  "Urls": {
    "Identity": "http://localhost:5001",
    "Employee": "http://localhost:5002",
    "GrpcIdentity": "http://localhost:6001",
    "GrpcEmployee": "http://localhost:6002"
  }
}
