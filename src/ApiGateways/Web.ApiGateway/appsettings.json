{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "OpenApi": {
    "Endpoint": {
      "Name": "ApiGateway.API V1"
    },
    "Document": {
      "Description": "The ApiGateway Service HTTP API",
      "Title": "HRM - ApiGateway HTTP API",
      "Version": "v1"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "identity-route": {
        "ClusterId": "identity",
        "Match": {
          "Path": "identity/{**catch-all}"
        }
      },
      "employee-route": {
        "ClusterId": "employee",
        "Match": {
          "Path": "employee/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "identity": {
        "Destinations": {
          "destination0": {
            "Address": "http://localhost:5101"
          }
        }
      },
      "employee": {
        "Destinations": {
          "destination0": {
            "Address": "http://localhost:5102"
          }
        }
      }
    }
  }
}
