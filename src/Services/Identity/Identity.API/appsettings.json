{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console"
      //"Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "SourceContext = 'Microsoft.AspNetCore.Diagnostics.ExceptionHandlerMiddleware'"
        }
      }
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "Formatter": {
            "Type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
            "Template": "{ {lv: @l, msg: @m, ex: @x, sc: @sc, props: @p} }\n"
          }
        }
      }
    ],
    //"WriteTo:Async": {
    //  "Name": "Async",
    //  "Args": {
    //    "configure": [
    //      {
    //        "Name": "File",
    //        "Args": {
    //          "path": "Logs/log.json",
    //          "Formatter": {
    //            "Type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
    //            "Template": "{ {time: @t, msg: @m, lv: @l, ex: @x, evt: @i, sc: @sc, app: @p['App'], req: @p['RequestId']} }\n"
    //          }
    //        }
    //      }
    //    ]
    //  }
    //},
    "Enrich": [ "WithExceptionDetails" ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDestructuringDepth": 4 }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": { "maximumStringLength": 100 }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": { "maximumCollectionCount": 10 }
      }
    ],
    "Properties": {
      "App": "Identity"
    }
  },

  "AllowedHosts": "*",
  "OpenApi": {
    "Endpoint": {
      "Name": "Identity.API V1"
    },
    "Document": {
      "Description": "The Identity Service HTTP API",
      "Title": "HRM - Identity HTTP API",
      "Version": "v1"
    }
  }
}
