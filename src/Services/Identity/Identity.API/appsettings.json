{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      }
    ],
    "WriteTo:Async": {
      "Name": "Async",
      "Args": {
        "configure": [
          {
            "Name": "File",
            "Args": {
              "path": "Logs/log.json",
              "Formatter": {
                "Type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
                //"Template": "{ {ts: @t, msg: @m, lv: @l, ex: @x, evt: @i, sc: @sc, props: {App, RequestId, ConnectionId}} }\n"
                "Template": "{ {time: @t, msg: @m, lv: @l, ex: @x, evt: @i, sc: @sc, app: @p['App'], req: @p['RequestId']} }\n"
              }
            }
          }
        ]
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDestructuringDepth": 4 }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": { "maximumStringLength": 100 }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": { "maximumCollectionCount": 10 }
      }
    ],
    "Properties": {
      "App": "Identity"
    }
  },
  "AllowedHosts": "*",
  "OpenApi": {
    "Endpoint": {
      "Name": "Identity.API V1"
    },
    "Document": {
      "Description": "The Identity Service HTTP API",
      "Title": "HRM - Identity HTTP API",
      "Version": "v1"
    }
  } 
}
